<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "LargeRedFont">
        <item name ="android:textColor">#C80000</item>
        <item name ="android:textSize">40sp</item>
    </style>>

    <style name = "LargeFont">
        <item name ="android:textSize">70sp</item>
    </style>>

    <style name = "LargeBlueFont" parent ="@style/LargeFont">
        <item name ="android:textColor">#000071</item>
    </style>

    <style name = "LargeFont.Red">
        <item name ="android:textColor">#C80000</item>
    </style>

    <style name = "BlueStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
